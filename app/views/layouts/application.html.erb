<!DOCTYPE html>
<%=%>
<html>
<head>
  <title>Myblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
	<div id="logo">
		<%= link_to root_path do %>
			<%= image_tag("logo.jpg", height: '50', width: '50')%>
			<!-- <div> <h3><b> <font color="Green">My_Blog</font></b> <h3></div>	 -->
		<% end%>
	</div>
		<ul>
			<li class="category">Website</li>
			<li> <%= link_to "Myblog", root_path%></li>
			<li class="category"><%= link_to "About", about_path%></li>
		</ul>
		<ul>
			<li class="category">connect me</li>
			<li class="category"> <a href="https://www.facebook.com/ahmed99gouda">Facebook</a></li>
		</ul>
		<%if !user_signed_in? %>
			<p class="sign_in">Admin Login</p>
		<% end %>

	 </div>
	  <div id="main_content">
	  		<div id="header">
	  		<% if current_page?(root_path)%>
	  				<p>All posts</p>
	  		<%elsif current_page?(about_path)%>
	  				<p>About</p>
	  		<%else%>
	  				<p class="button"><%= link_to "Bake to all posts", root_path%></p>
	  		<%end%>	
	  		<%if user_signed_in?%>	
	  			<div class="buttons">
	  				<button class="button"><%=link_to "New Post" ,new_post_path %></button>
	  				<button class="button"><%= link_to "Logout",destroy_user_session_path ,:method => :delete%></button>

	  			</div>
	  			<%else%>
		  			<div class="buttons">
		  				<button class="button"><%=link_to "Login" ,new_user_session_path %></button>
		  				<button class="button"><%= link_to "sign up",new_user_session_path%></button>

		  			</div>

	  			<% end %>
	  		</div>
	  		
	  		<%= yield %>

	  		

	  </div>


</body>
</html>
