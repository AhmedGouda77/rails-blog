<div id="page_wrapper">


	<h1 class="title">
		<font color="Green">
		<%=  @post.title%>
		</font>
	</h1>

		
	<p class="data">
		<font color="Cyan">
		submited <%= time_ago_in_words(@post.created_at) %> ago
		<%if user_signed_in?%>
			<font color="blue"><%= link_to 'Edit', edit_post_path(@post) %></font>
			<font color="red"><%= link_to 'Delete', post_path(@post),
	              method: :delete,
	              data: { confirm: 'Are you sure?' } %></font>
			</font>	
		<% end -%>	
	</p>
	<p class="body">
		

		<%= @post.body %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comments</h2>
		<%=render @post.comments %>
		<%= render 'comments/form'%>
	</div>

	
</div>	